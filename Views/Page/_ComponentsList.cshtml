@model Cms_Net.Models.Component

@{
    ViewData["Title"] = "_ComponentsList";
}

<h1>_ComponentsList</h1>

<h4>Component</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddComponent" asp-controller="Component" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ComponentDefinitionKey" class="control-label"></label>
                <select asp-for="ComponentDefinitionKey" class ="form-control" asp-items="ViewBag.ComponentDefinitionKey"></select>
            </div>            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
