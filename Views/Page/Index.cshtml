@{
    ViewData["Title"] = "Lista Pagine";
}

@model List<Page>


<div class="contaienr">
    <div class="text-center">
        <h1 class="display-4">Lista Pagine</h1>    
    </div>
    <div>
        <a class="btn btn-success" href="@Url.Action("Create","Page")"><strong>+</strong> pagina</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Nome Componente</th>
                <th>Nome Azioni</th>
            </tr>
            
        </thead>
       <tbody>
            @foreach (Page comp in Model)
            {
                <tr>
                    <td>@comp.Title</td>
                    <td>
                        <a class="btn btn-warning" href="@Url.Action("Edit","Page",new { id = comp.Id})">Modifica</a>
                        <a class="btn btn-primary" href="@Url.Action("Details","Page",comp)">Anteprima di Pagina</a>
                       
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
